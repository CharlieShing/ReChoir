<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">

    <!-- MAIN CONTENT -->
    <com.mdi.rechoir.CanvasView
        android:id="@+id/signature_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF" />


    <!-- SLIDING LAYOUT -->
    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:padding="5dp"
        android:background="#85000000"
        android:alpha="50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/button_rewind"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="rewind"
                android:background="@mipmap/backward_icon"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/button_stop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="stop"
                android:background="@mipmap/pause_icon"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/button_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="play"
                android:background="@mipmap/play_icon"
                android:layout_marginRight="10dp"/>

            <!--
            <Button
                android:id="@+id/button_loop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="loop"
                android:background="@mipmap/loop_icon"/>-->

        </LinearLayout>
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>